@model IEnumerable<ERP_ZTI.Models.Orders>

@{
    ViewBag.Title = "List of orders";
}

<h2>List of orders</h2>

<p>
    @Html.ActionLink("new order", "newOrder")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contractors.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IProducts.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contractors.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IProducts.Name)
        </td>
        <td>
            @Html.ActionLink("End transaction", "End", new { id=item.OrderID })
        </td>
    </tr>
}

</table>
